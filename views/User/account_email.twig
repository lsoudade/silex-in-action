{% extends "Layout/main.twig" %}

{% block content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">{{ 'account.ident.email'|trans }}</h3>
        </div>
        <div class="panel-body">
            <dl class="form_row">
                <dt><label>{{ 'form.account.email.old'|trans }}</label></dt>
                <dd><input type="email" value="{{ app.security.token.user.username }} " class="form-control" disabled="disabled" /></dd>
            </dl>
            
            {% form_theme form 'Form/form_div_layout.twig' %}
            
            <form action="{{ path('account_email') }}" method="post">
                <div class="form-group form-group-email">
                    {{ form_row(form.email) }}
                </div>

                {{ form_rest(form) }}

                <button type="submit" name="submit" class="btn btn-primary">{{ 'form.submit'|trans }}</button>
            </form>
        </div>
    </div>
{% endblock %}