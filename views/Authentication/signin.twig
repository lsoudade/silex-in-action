{% extends "Layout/main.twig" %}
       
{% block content %}
    <form action="{{ url('login_check') }}" method="post">
        {% if error %}
            <div class="error">{{ error|trans }}</div>
        {% endif %}
        <div class="form-group">
            <input type="email" class="form-control" id="_username" placeholder="{{ 'email'|trans }}" name="_username" value="{{ last_username }}">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" id="_password" placeholder="{{ 'password'|trans }}" name="_password" value="">
        </div>
        <p class="lost"><a href="{{ path('lost_password') }}">{{ 'lost_password'|trans }}</a></p>
        <button type="submit" class="btn btn-primary" id="loginForm-submit">{{ 'login'|trans }}</button>
    </form>
{% endblock %} 