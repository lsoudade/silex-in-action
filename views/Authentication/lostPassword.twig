{% extends "Layout/main.twig" %}

{% block content %}
    {% form_theme form 'Form/form_div_layout.twig' %}

    <p class="description">{{ 'authentication.lostPassword.message'|trans }}</p>
    
    <form action="{{ path('lost_password') }}" method="post">
        {{ form_widget(form) }}

        <button class="btn btn-primary" type="submit">{{ 'submit'|trans }}</button>
    </form>
{% endblock %}