{% extends "Layout/main.twig" %}

{% block content %}
    {% form_theme form 'Form/form_div_layout.twig' %}

    <p class="description">{{ 'authentication.lost_password.text'|trans }}</p>
    
    <form action="{{ path('lost_password') }}" method="post">
        <div class="form-group form-group-email">
            {{ form_row(form.email) }}
        </div>
        
        {{ form_rest(form) }}

        <button class="btn btn-primary" type="submit">{{ 'authentication.lost_password.submit'|trans }}</button>
    </form>
{% endblock %}